<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/scroll_box_item_image_width"
    android:layout_height="wrap_content"
    cardview:cardElevation="@dimen/margin_extra_short"
    cardview:cardUseCompatPadding="true"
    android:padding="@dimen/margin_short"
    cardview:cardCornerRadius="@dimen/google_cards_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <org.sebbas.android.memegenerator.SquaredImageView
            android:id="@+id/item_image"
            android:src="@android:color/holo_blue_bright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_title"
            style="@android:style/TextAppearance.DeviceDefault"
            android:text="No title"
            android:padding="@dimen/margin_extra_short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:ellipsize="marquee"
            android:minLines="2"
            android:maxLines="2"
            android:textColor="?android:attr/textColorPrimary"/>
    </LinearLayout>
</android.support.v7.widget.CardView>