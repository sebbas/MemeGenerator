<?xml version="1.0" encoding="utf-8"?>
<com.example.android.swiperefreshmultipleviews.MultiSwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/recycler_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.ksoichiro.android.observablescrollview.ObservableRecyclerView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>

        <xyz.danoz.recyclerviewfastscroller.vertical.VerticalRecyclerViewFastScroller
            android:id="@+id/fast_scroller"
            android:layout_width="@dimen/fast_scroller_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:rfs_barColor="@color/accent"
            app:rfs_handleBackground="@drawable/fast_scroller_handle" />

        <org.sebbas.android.memegenerator.ScrollBarSectionIndicator
            android:id="@+id/fast_scroller_section_title_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/fast_scroller"
            android:layout_toStartOf="@id/fast_scroller"
            app:rfs_backgroundColor="@color/accent"
            app:rfs_textColor="@android:color/white" />

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/progress_view"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cpv_indeterminate="true"
            app:cpv_thickness="5dp"
            app:cpv_color="@color/accent"/>
    </RelativeLayout>

</com.example.android.swiperefreshmultipleviews.MultiSwipeRefreshLayout>