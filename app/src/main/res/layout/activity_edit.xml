<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:mContext=".MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="@color/primary"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
            app:theme="@style/Toolbar" />

        <!-- This view is used to create the elevation effect at the
        top of the bottom sliding tabs bar -->
        <View
            android:id="@+id/toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shadow_height"
            android:background="@drawable/shadow_toolbar"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_above="@+id/footer"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_image"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <org.sebbas.android.memegenerator.TextViewOutline
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_one"
            android:textSize="36sp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/item_image"/>

        <org.sebbas.android.memegenerator.TextViewOutline
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_two"
            android:textSize="36sp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/item_image"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <!-- This view is used to create the elevation effect at the
        top of the bottom sliding tabs bar -->
        <View
            android:id="@+id/footer_shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shadow_height"
            android:background="@drawable/shadow_footer"
            android:layout_above="@+id/sliding_tabs_main_navigation" />

        <LinearLayout
            android:id="@+id/footer_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary"
            android:padding="@dimen/margin_extra_short">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_text_one"
                    android:textColor="@color/textAndIcons"
                    android:textColorHint="@color/textAndIcons"
                    android:hint="@string/top_text"
                    android:layout_width="273dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_extra_short"
                    android:layout_marginTop="@dimen/margin_extra_short"
                    android:layout_marginBottom="@dimen/margin_extra_short" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/button_one" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/button_two" />

            </LinearLayout>

            <EditText
                android:id="@+id/edit_text_two"
                android:textColor="@color/textAndIcons"
                android:textColorHint="@color/textAndIcons"
                android:hint="@string/bottom_text"
                android:layout_margin="@dimen/margin_extra_short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
